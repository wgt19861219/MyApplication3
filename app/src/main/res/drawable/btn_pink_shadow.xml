<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击之后 -->
    <item android:state_pressed="true"><layer-list>
            <item android:left="@dimen/four" android:top="@dimen/four"><shape>
                    <solid android:color="@color/bg_pink" />

                    <corners android:radius="@dimen/eight" />
                </shape></item>
        </layer-list></item>
    <!-- 正常状态 -->
    <item><layer-list>

            <!-- 第一层 -->
            <item android:left="@dimen/four" android:top="@dimen/four"><shape>
                    <solid android:color="#66000000" />

                    <corners android:radius="@dimen/eight" />
                    <!-- 描边 -->
                    <stroke android:width="@dimen/one" android:color="#ffffffff" />
                </shape></item>
            <!-- 第二层 -->
            <item android:bottom="@dimen/four" android:right="@dimen/four"><shape>
                    <solid android:color="@color/bg_pink" />

                    <corners android:radius="@dimen/eight" />
                    <!-- 描边 -->
                    <stroke android:width="@dimen/one" android:color="#ffffffff" />
                </shape></item>
        </layer-list></item>

</selector>