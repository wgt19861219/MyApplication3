<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:src="@drawable/circle_green" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/bg_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_start_cash_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2016-07-12"
            android:textColor="@color/tv_time_gray" />

        <TextView
            android:id="@+id/tv_start_doc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="东汉王朝皇帝风云榜"
            android:textSize="@dimen/fifteenth" />

        <LinearLayout
            android:id="@+id/ll_start_inform_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_sea_blue"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="东汉王朝金库账号"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteenth" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inform_client_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_bright_pink"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_first_aid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="东汉王朝群号"
                android:textSize="@dimen/fifteenth" />

            <TextView
                android:id="@+id/tv_bank_card_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Android交流群 470707794"
                android:textSize="@dimen/twenty_fiveth" />

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="东汉王朝csdn网址"
                android:textSize="@dimen/fifteenth" />

            <TextView
                android:id="@+id/tv_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="http://blog.csdn.net/u014452224"
                android:textSize="@dimen/twenty_fiveth" />

            <com.example.wgt1986.myapplication.listview.custom.CustomGridView
                android:id="@+id/gv_cash_appoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:horizontalSpacing="20dp"
                android:numColumns="3"
                android:padding="5dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="20dp" >
            </com.example.wgt1986.myapplication.listview.custom.CustomGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_cash_appoint"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_pink_shadow"
                    android:text="指派"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteenth" />

            </LinearLayout>
        </LinearLayout>

        <com.example.wgt1986.myapplication.listview.custom.CustomListView
            android:id="@+id/lv_east"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null" >
        </com.example.wgt1986.myapplication.listview.custom.CustomListView>

        <Button
            android:id="@+id/btn_client_upload"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gem_green_shadow"
            android:padding="10dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/fifteenth" />
    </LinearLayout>

</LinearLayout>