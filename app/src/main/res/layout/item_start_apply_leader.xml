<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:contentDescription="@null"
            android:src="@drawable/circle_gray" />

         <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/bg_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_apply_leader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_start_apply_leader_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2016-07-28"
            android:textColor="@color/tv_time_gray" />

        <TextView
            android:id="@+id/tv_start_apply_leader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="下面是一些联系可以试试"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/ll_start_apply_leader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_purple"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="选择联系方式（不是本人的）"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteenth" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_apply_leader_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_bright_pink"
            android:padding="10dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_apply_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon_sms"
                android:gravity="center"
                android:text="短信" />

            <TextView
                android:id="@+id/tv_apply_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/phone"
                android:gravity="center"
                android:text="电话" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>